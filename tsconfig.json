  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "es2020",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "es2020"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [ "./node_modules/@types" ]
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
